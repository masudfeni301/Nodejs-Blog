<div class="form-container">    
    <% if(errors.length > 0){ %>
        <div class="errors">
            <% errors.forEach((error) => { %>
                <span class="error"><%= error.msg %></span> 
            <% }) %>
        </div>
    <% } %>
    <form action="/register" method="POST">
        <div class="group">
            <h3>Create new account</h3>
        </div>
        <div class="group">
            <label for="name">Name</label>
            <input type="text" name="name" id="name" class="control" placeholder="Name">
        </div>
        <div class="group">
            <label for="email">Email</label>
            <input type="email" name="email" id="email" class="control" placeholder="Email">
        </div>
        <div class="group">
            <label for="password">Password</label>
            <input type="password" name="password" id="password" class="control" placeholder="Password">
        </div>
        <div class="group">
            <input type="submit" value="register" class="btn btn-sweet">
        </div>
    </form>
</div>